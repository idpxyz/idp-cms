# 节点配置
NODE_NAME=node1
NODE_ROLE=primary
SERVER1_IP=192.168.1.10
SERVER2_IP=192.168.1.11

# 数据库配置
POSTGRES_HOST=172.28.0.10
POSTGRES_PORT=5432
POSTGRES_DB=news_ha
POSTGRES_USER=news
POSTGRES_PASSWORD=YourSecurePassword123!
