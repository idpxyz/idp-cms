      }
    },
    {
      "name": "文化频道配置",
      "slug": "culture",
      "homepage_display": {
        "show_strip": true,
        "strip_order": 3,
        "strip_priority": "medium",
        "article_limit": 4,
        "show_categories": false
      },
      "responsive_config": {
        "mobile": {
          "show_strip": false,
