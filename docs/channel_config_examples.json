        "tablet": {
          "show_strip": true,
          "article_limit": 5
        },
        "desktop": {
          "show_strip": true,
          "article_limit": 6
        }
      },
      "display_config": {
        "icon_url": "/icons/finance.svg",
        "color_theme": "#10B981",
