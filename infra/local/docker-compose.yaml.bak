services:
  postgres:
    image: postgres:latest
    environment:
      POSTGRES_DB: ${POSTGRES_DB:-news}
      POSTGRES_USER: ${POSTGRES_USER:-news}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD:-news}
    volumes: [ pgdata:/var/lib/postgresql/data ]
    ports: [ "5438:5432" ]
    healthcheck:
      test: [ "CMD-SHELL", "pg_isready -U ${POSTGRES_USER:-news}" ]
      interval: 10s
      timeout: 5s
      retries: 5

  redis:
    image: redis:7
    ports: [ "6379:6379" ]
    volumes:
      - redis_data:/data
    healthcheck:
      test: [ "CMD", "redis-cli", "ping" ]
      interval: 10s
      timeout: 5s
      retries: 5

  minio:
    image: minio/minio:latest
    environment:
      MINIO_ROOT_USER: ${MINIO_ACCESS_KEY:-minioadmin}
      MINIO_ROOT_PASSWORD: ${MINIO_SECRET_KEY:-minioadmin}
    command: server /data --console-address ":9001"
    ports: [ "9002:9000", "9001:9001" ]
    volumes: [ minio:/data ]
    healthcheck:
      test: [ "CMD", "curl", "-f", "http://localhost:9000/minio/health/live" ]
      interval: 30s
      timeout: 20s
      retries: 3

  minio-setup:
    image: minio/mc:latest
    depends_on: [ minio ]
    entrypoint: >
      /bin/sh -c " sleep 5; mc alias set local http://minio:9000 ${MINIO_ACCESS_KEY:-minioadmin} ${MINIO_SECRET_KEY:-minioadmin}; mc mb -p local/${MINIO_BUCKET:-media} || true; exit 0; "

  opensearch:
    image: opensearchproject/opensearch:3
    env_file: ../../.env
    environment:
      - discovery.type=single-node
      - plugins.security.disabled=${OPENSEARCH_SECURITY_DISABLED:-true}
      - bootstrap.memory_lock=true
      - OPENSEARCH_JAVA_OPTS=-Xms512m -Xmx512m
    ulimits: { memlock: { soft: -1, hard: -1 } }
    ports: [ "9200:9200", "9600:9600" ]
    volumes:
      - opensearch_data:/usr/share/opensearch/data
      - opensearch_logs:/usr/share/opensearch/logs
      - ./opensearch.yml:/usr/share/opensearch/config/opensearch.yml:ro

  os-dashboards:
    image: opensearchproject/opensearch-dashboards:3
    environment:
      - OPENSEARCH_HOSTS=["http://opensearch:9200"]
      - OPENSEARCH_USERNAME=${OPENSEARCH_USERNAME:-admin}
      - OPENSEARCH_PASSWORD=${OPENSEARCH_PASSWORD:-OpenSearch2024!@#$%}
    ports: [ "5601:5601" ]
    depends_on: [ opensearch ]

  clickhouse:
    image: clickhouse/clickhouse-server:24.3
    ports: [ "8123:8123", "9123:9000" ]
    volumes:
      - chdata:/var/lib/clickhouse
      - ../../:/app
    healthcheck:
      test: [ "CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8123/ping" ]
      interval: 30s
      timeout: 10s
      retries: 3

  authoring:
    build: { context: ../../, dockerfile: authoring/Dockerfile }
    env_file: ../../.env
    volumes: [ "../../:/app" ]
    working_dir: /app
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
      minio:
        condition: service_healthy
      opensearch:
        condition: service_started
      clickhouse:
        condition: service_healthy
    ports: [ "8000:8000" ]
    command: python authoring/manage.py runserver 0.0.0.0:8000

  celery:
    build: { context: ../../, dockerfile: authoring/Dockerfile }
    env_file: ../../.env
    volumes: [ "../../:/app" ]
    working_dir: /app
    depends_on:
      authoring:
        condition: service_started
      redis:
        condition: service_healthy
    command: python authoring/manage.py run_celery_worker

  celery-beat:
    build: { context: ../../, dockerfile: authoring/Dockerfile }
    env_file: ../../.env
    volumes: [ "../../:/app" ]
    working_dir: /app
    depends_on:
      authoring:
        condition: service_started
      redis:
        condition: service_healthy
    command: python authoring/manage.py run_celery_beat

  portal:
    build: { context: ../../portal/next, dockerfile: Dockerfile }
    env_file: ../../.env
    environment:
      NEXT_PUBLIC_FEED_API_URL: ${FEED_API_URL:-http://localhost:8000}
      NEXT_PUBLIC_TRACK_URL: ${TRACK_URL:-http://localhost:8000/api/track}
      SITE_HOSTNAME: ${SITE_HOSTNAME:-site-a.local}
    ports: [ "3000:3000" ]
    volumes:
      - ../../portal/next:/app
      - /app/node_modules
    depends_on:
      authoring:
        condition: service_started
  #   portal:
  #   user: "${DEV_UID:-1000}:${DEV_GID:-1000}"
  #   environment:
  #     FEED_API_URL: ${FEED_API_URL:-http://authoring:8000}
  #     NEXT_PUBLIC_FEED_API_URL: ${NEXT_PUBLIC_FEED_API_URL:-http://localhost:8000}
  # authoring:
  #   user: "${DEV_UID:-1000}:${DEV_GID:-1000}"
  #   environment:
  #     ALLOWED_HOSTS: ${ALLOWED_HOSTS:-localhost,127.0.0.1,192.168.8.195,portal.local,site-a.local,site-b.local}

volumes:
  pgdata: {}
  chdata: {}
  minio: {}
  opensearch_data: {}
  opensearch_logs: {}
  redis_data: {}
