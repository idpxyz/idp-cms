{
  "size": 200,
  "query": {
    "function_score": {
      "query": {
        "bool": {
          "filter": [
            {
              "term": {
                "site": "__SITE__"
              }
            },
            {
              "range": {
                "publish_time": {
                  "gte": "now-__HOURS__h"
                }
              }
            }
          ],
          "must_not": [
            {
              "terms": {
                "article_id.keyword": "__SEEN_IDS__"
              }
            }
          ],
          "should": [
            {
              "terms": {
                "channel": "__CHANNELS__",
                "boost": 2.0
              }
            },
            {
              "term": {
                "is_featured": {
                  "value": true,
                  "boost": 1.5
                }
              }
            },
            {
              "exists": {
                "field": "title"
              }
            }
          ],
          "minimum_should_match": 0
        }
      },
      "functions": [
        {
          "exp": {
            "publish_time": {
              "origin": "now",
              "scale": "24h",
              "decay": 0.8
            }
          }
        },
        {
          "field_value_factor": {
            "field": "ctr_1h",
            "factor": 3,
            "missing": 0.001
          }
        },
        {
          "field_value_factor": {
            "field": "quality_score",
            "factor": 2
          }
        },
        {
          "field_value_factor": {
            "field": "weight",
            "factor": 1.5,
            "missing": 0
          }
        }
      ],
      "score_mode": "sum",
      "boost_mode": "multiply"
    }
  }
}
